<p id="notice"><%= notice %></p>
<div id="createData"></div>
<h1>Posts</h1>

<div class="float-left">
    <%= form_tag(posts_path, method: "get", remote: true, :class => "form-inline") do  %>
      <%= text_field_tag :search, params[:search], placeholder:"Buscar un Post", :class =>"form-control" %>
      <%= submit_tag "Buscar", class:"btn btn-primary"%>
    <% end %>

<br>
<div>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Content</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody id="data">
      <%= render('posts/data') %>
    </tbody>
  </table>
</div>
<br>

<%= link_to 'New Post', new_post_path, remote: true %>

<div id="showData"></div>

